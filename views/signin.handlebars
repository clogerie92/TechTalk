<div class="row">
    <div class="col justify-content-center">
        <h2 class="signin">Sign In</h2>
        <form class="form sign-in-form">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" aria-label="username" aria-describedby="basic-addon1" id="username-signin">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" aria-label="password" aria-describedby="basic-addon1" id="password-signin">
            </div>
            <div class="form-group block">
                <button type="submit" class="btn btn-primary form-control" placeholder="Sign In" aria-describedby="basic-addon1" id="submitBtn">Sign In</button>
            </div>
            <div>
                <a href="/signup">Don't have an account? Sign up here!</a>
            </div>
        </form>    
    </div>
</div>

<script src="/js/signin.js"></script>