<div class="card text-center">
  <div class="card-header">
    Blog
  </div>
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">Created by {{user.username}}</p>
    <hr>
    <p class="card-text">{{blog}}</p>
  </div>
  <div class="card-footer text-muted">
    {{date_created}}
  </div>
</div>

{{#if logged_in}}
<div class="mb-3">
  <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="enter comment here..."></textarea>
</div>
<div class="commentBtn">
    <button class="btn btn-primary" type="submit"><i class="bi bi-arrow-up"></i></button>
</div>
{{/if}}

<h2 class="text-center">Blog Comments</h2>
{{#each comments as |comment|}}
<div class="comment-container">
    <ul>
        <li>
            <p class="text-center comment-content">{{comment.comment}}</p>
            <hr>
            <p class="text-center comment-creator">Commented by {{comment.user.username}} on {{date_created}}</p>
        </li>
    </ul>
</div>
{{/each}}

<script src="/js/comments.js"></script>