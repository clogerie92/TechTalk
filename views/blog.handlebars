<div class="card text-center">
  <div class="card-header">
    <h5 class="card-title">{{title}} by {{user.username}}</h5>
  </div>
  <div class="card-body">
    <p class="card-text">{{blog}}</p>
  </div>
  <div class="card-footer text-muted">
    {{date_created}}
  </div>
</div>

{{#if logged_in}}
<form class="new-comments" data-blogid={{id}}>
  <div class="mb-3">
    <textarea class="form-control" id="blog-comments" rows="3" placeholder="enter comment here..."></textarea>
  </div>
  <div class="commentBtn">
    <button class="btn btn-primary" type="submit" id="submitBtn"><i class="bi bi-arrow-up"></i></button>
  </div>
</form>
{{/if}}

<h2 class="text-center">Blog Comments</h2>
{{#each comments as |comment|}}
<div class="comment-container">
    <ul class="list-group">
        <li class="list-group-item list-group-item-dark">
            <p class="text-center comment-content">{{comment.comment}}</p>
            <hr>
            <p class="text-center comment-creator">Commented by {{comment.user.username}} on {{date_created}}</p>
        </li>
    </ul>
</div>
{{/each}}

<script src="/js/comments.js"></script>